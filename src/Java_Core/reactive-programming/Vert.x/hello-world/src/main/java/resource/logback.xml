<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAdapter">
        <encoder>
            <pattern>%level [%thread] %logger{0} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="io.netty" level="warn" />

    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>